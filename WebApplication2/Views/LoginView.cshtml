@using WebApplication2.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="login">
    <img src="~/images/login-bg.jpg" alt="Background" class="login__bg" />
    <form class="login__form" asp-action="Login" method="post">
        @Html.AntiForgeryToken()
        <h1 class="login__title">Login</h1>
        
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        
        <div class="text-danger">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        
        <div class="login__inputs">
            <div class="login__box">
                <input asp-for="Email" required placeholder="Email" class="login__input" type="email" />
                <i class="ri-mail-fill"></i>
                <div class="text-danger">
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>
            
            <div class="login__box">
                <input asp-for="Password" required placeholder="Password" class="login__input" type="password" />
                <i class="ri-lock-2-fill"></i>
                <div class="text-danger">
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>
        </div>
        
        <div class="login__check">
            <div class="login__check-box">
                <div class="login__check-left">
                    <input asp-for="RememberMe" class="login__check-input" id="remember-check" type="checkbox" />
                    <label for="remember-check" class="login__check-label">Remember me</label>
                </div>
                <div class="login__check-right">
                    <label class="login__check-label">
                        <a asp-controller="Account" asp-action="ForgotPassword">Forgot Password?</a>
                    </label>
                </div>
            </div>
        </div>
        
        <button type="submit" class="login__button">Login</button>
        
        <div class="login__register">
            Don't have an account? 
            <a asp-controller="Account" asp-action="Register" class="text-decoration-none">Register</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}